<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3EEEE">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#33290A"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="331dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:fontFamily="@font/amaranth_bold"
            android:hint="City Name"
            android:textAlignment="center"
            android:textColor="#F49406"
            android:textSize="25sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FDE409"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:padding="1dp">


            <TextView
                android:id="@+id/activeIndian"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth_bold"
                android:hint="activeIn"
                android:text="Active Indian:"
                android:textAlignment="gravity"
                android:textColor="#F40606"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="56dp"
                android:layout_height="42dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>





            <TextView
                android:id="@+id/activeForeign"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth_bold"
                android:hint="activeFor"
                android:text="Active Froeign:"
                android:textColor="#F40606"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="47dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="7dp"
                android:textColor="#FA1706" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="11dp"
            android:background="#FDE409"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/discharged"
                android:layout_width="114dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth_bold"
                android:hint="dis"
                android:text="Discharged:"
                android:textColor="#5D07F8"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="10dp"/>

<!--            <TextView-->
<!--                android:id="@+id/textView4"-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="41dp"-->
<!--                android:layout_marginHorizontal="10dp"-->
<!--                android:layout_marginTop="6dp"-->
<!--                android:textColor="#08F812" -->
<!--                android:layout_marginLeft=/>-->


            <TextView
                android:id="@+id/deaths"
                android:layout_width="89dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth_bold"
                android:hint="deaths"
                android:text="Deaths:"
                android:textColor="#5A06F1"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="44dp"
                android:layout_height="37dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#0D2DDF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#FDE409"
            android:orientation="horizontal">

            <TextView
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/amaranth_bold"
                android:hint="total"
                android:text="Total Confirmed:"
                android:textColor="#0AB5A5"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="63dp"
                android:layout_height="32dp"
                android:layout_marginVertical="13dp"
                android:textColor="#30160E"
                android:layout_marginLeft="-20dp"/>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>